{
    "compilerOptions": {
        "target": "es5",
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "spine/**/*",
        "node_modules/**/*",
        "dist"
    ]
}