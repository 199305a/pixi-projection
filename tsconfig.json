{
    "compilerOptions": {
        "target": "es5",
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "compile"
    },
    "include": [
        "src/**/*",
        "integration-spine/**/*",
        "./global.d.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist",
        "**/*.vert",
        "**/*.frag"
    ]
}